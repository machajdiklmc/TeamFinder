<MatNumericUpDownField Label="Latitude"
                       Id="latitude"
                       HelperText="Latitude position" 
                       HelperTextPersistent="true"
                       Required="true"
                       @bind-Value="@Value"
                       DecimalPlaces="2"
                       FullWidth="true"
                       Icon="@MatIconNames.My_location"
                       Minimum="-90"
                       Maximum="90">
</MatNumericUpDownField>

@code {
    [Parameter]
    public double? Value { get; set; }
    
    [Parameter]
    public EventCallback<double>ValueChanged { get; set; }
}
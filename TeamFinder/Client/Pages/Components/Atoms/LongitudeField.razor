<MatTextField Label="Longitude"
                       Id="longitude"
                       HelperText="Longitude position" 
                       HelperTextPersistent="true"
                       Required="true"
                       @bind-Value="@Value"
                       ReadOnly="true"
                       Icon="@MatIconNames.My_location"
                       FullWidth="true">
</MatTextField>
@code {
    [Parameter]
    public double? Value { get; set; }

    [Parameter]
    public EventCallback<double>ValueChanged { get; set; }
}
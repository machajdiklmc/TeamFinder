<MatNumericUpDownField Label="Longitude"
                       HelperText="Longitude position" 
                       HelperTextPersistent="true"
                       Required="true"
                       @bind-Value="@Value"
                       DecimalPlaces="2"
                       Icon="@MatIconNames.My_location"
                       FullWidth="true"
                       Minimum="-180" 
                       Maximum="180">
</MatNumericUpDownField>
@code {
    [Parameter]
    public double? Value { get; set; }
    
    [Parameter]
    public EventCallback<double>ValueChanged { get; set; }
}